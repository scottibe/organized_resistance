<ul>
  <li>Name: <%= @user.name %></li>
  <li>Party Affiliation: <%= @user.party_affiliation %></li>
  <li>City: <%= @user.city %></li> 
  <li>State: <%= @user.state %></li>
  <li>Party Affiliation: <%= @user.party_affiliation %></li>
</ul><br>

<% if current_user.id == @user.id %>
  
  <h4>Events you have signed up for:</h4>

  <ul>
    <% @user.attending_events.uniq.each do |event| %>
      <li><%= link_to event.title, event_path(event) %></li>
    <% end %>  
  </ul><br>

   <h4>Your created events:</h4>
  <ul>
    <% @user.created_events.each do |e| %>
      <li><%= link_to e.title, event_path(e) %></li>
    <% end %>  
  </ul><br>

  <h4>Your statements:</h4>
  <ul>
    <% @user.statements.each do |statement| %>
      <li><%= link_to statement.headline, user_statement_path(@user, statement) %></li>
    <% end %>  
  </ul><br>

  <h4>Events in your state:</h4>
  <ul>
    <% @events.each do |event| %>
      <li><%= link_to event.title, event_path(event) %></li>
    <% end %><br>
  </ul><br>

  <%= link_to "Create Statement", new_statement_path %>

<% else %>  
  <h2>Events Created by <%= @user.name %>:</h2>
  <ul>
    <% @user.created_events.each do |e| %>
      <li><%= link_to e.title, event_path(e) %></li>
    <% end %>  
  </ul>

  <h2>Statements by <%= @user.name %>:</h2>
  <ul>
    <% @user.statements.each do |statement| %>
      <li><%= link_to statement.headline, user_statement_path(@user, statement) %></li>
    <% end %>  
  </ul>

<% end %>


  

  
