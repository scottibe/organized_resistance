<%= form_for(statement) do |f| %>
  <% if statement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(statement.errors.count, "error") %> prohibited this statement from being saved:</h2>

      <ul>
      <% statement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  

<h2>Create Statement</h2>

  <div class="form-group">
    <%= f.label :headline %> 
    <%= f.text_field :headline, class: "form-control" %>
  </div>  
  
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>  

  <h4>Categories</h4>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <p>Or Create a New Category</p>
  <p>
    <%= f.fields_for :categories, @statement.categories.build do |ff| %>
      <%= ff.text_field :name, allow_blank: false %>
    <% end %>  
  </p>  
  
  <div class="actions">
    <%= f.submit "Create Statement", class: "btn btn-primary" %>
  </div>  

<% end %> 