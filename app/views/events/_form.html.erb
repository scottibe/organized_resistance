<%= form_for(event) do |f| %>

<div class="container">

  <form>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>  

    <div class="form-group">
      <%= f.fields_for(:topics) do |topic_form| %>
        <%= topic_form.label :topic_name %>
        <%= topic_form.text_field :name, class: "form_control" %>
      <% end %>  
    </div>  

      <%= f.collection_check_boxes :topic_ids, Topic.all, :id, :name %><br>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :date_of_event %>
      <%= f.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :time %>
      <%= f.time_field :time, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :location_name %>
      <%= f.text_field :location_name, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :street_address %>
      <%= f.text_field :street_address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :zip %>
      <%= f.number_field :zip, class: "form-control" %>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button> 
  </form>  
</div>  
<% end %>

<%= link_to "Sign in with Facebook", "/auth/facebook" %>

